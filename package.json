  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,scss,css,md,json}": "prettier --write",
    ".{eslintrc,babelrc}": "prettier --write"
  }
}
