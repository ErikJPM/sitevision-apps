{
  "name": "sitevision-app",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "precommit": "lint-staged",
    "release:create": "lerna version --conventional-commits",
    "release:publish": "lerna publish from-git"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.10.0",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,scss,css,md,json}": "prettier --write",
    ".{eslintrc,babelrc}": "prettier --write"
  }
}
